<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New Series</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      max-width: 800px;
      margin: auto;
    }

    h2, h3 {
      text-align: center;
    }

    label {
      display: block;
      margin-top: 10px;
      font-weight: bold;
    }

    input, textarea, select {
      width: 100%;
      padding: 8px;
      margin-top: 4px;
    }

    .episode {
      border: 1px solid #ccc;
      padding: 10px;
      margin-top: 10px;
      position: relative;
    }

    .remove-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background: red;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }

    button {
      margin-top: 20px;
      padding: 10px 20px;
    }

    #addEpisodeBtn {
      background-color: #007BFF;
      color: white;
      border: none;
      cursor: pointer;
    }

    #addEpisodeBtn:hover {
      background-color: #0056b3;
    }

    #submitBtn {
      background-color: green;
      color: white;
      border: none;
      cursor: pointer;
    }

    #submitBtn:hover {
      background-color: darkgreen;
    }
  </style>
</head>
<body>

  <h2>Add New Series</h2>
  <form action="/api/addseries" method="POST" id="seriesForm">
    <label for="title">Title</label>
    <input type="text" name="title" required>

    <label for="rating">Rating (0-10)</label>
    <input type="number" name="rating" min="0" max="10" step="0.1" required>

    <label for="plot">Plot</label>
    <textarea name="plot" rows="3" required></textarea>

    <label for="genres">Genres (comma-separated)</label>
    <input type="text" name="genres">

    <label for="casts">Casts (comma-separated)</label>
    <input type="text" name="casts">

    <label for="directors">Directors (comma-separated)</label>
    <input type="text" name="directors">

    <label for="country">Country</label>
    <input type="text" name="country" required>

    <label for="poster">Poster URL</label>
    <input type="url" name="poster" required>

    <label for="trailer">Trailer</label>
    <input type="url" name="trailer" required>

    <label for="releaseDate">Release Date</label>
    <input type="date" name="releaseDate">

    <label for="seasons">Number of Seasons</label>
    <input type="number" name="seasons" min="1" required>

    <label for="status">Status</label>
    <select name="status">
      <option value="Ongoing">Ongoing</option>
      <option value="Completed">Completed</option>
      <option value="Cancelled">Cancelled</option>
    </select>

    <h3>Episodes</h3>
    <div id="episodes-container">
      <div class="episode">
        <button type="button" class="remove-btn" onclick="removeEpisode(this)">X</button>
        <label>Season</label>
        <input type="number" name="episodes[0][season]" required>

        <label>Episode Number</label>
        <input type="number" name="episodes[0][episodeNumber]" required>

        <label>Title</label>
        <input type="text" name="episodes[0][title]" required>

        <label>Duration (minutes)</label>
        <input type="number" name="episodes[0][duration]" required>

        <label>Air Date</label>
        <input type="date" name="episodes[0][airDate]">

        <label>Description</label>
        <textarea name="episodes[0][description]"></textarea>

        <label>Thumbnail</label>
        <input type="url" name="episodes[0][episode_thumbnail]">

        <label>Episode Source URL</label>
        <input type="url" name="episodes[0][episode_src]" required>
      </div>
    </div>

    <button type="button" id="addEpisodeBtn" onclick="addEpisode()">+ Add Episode</button>
    <button type="submit" id="submitBtn">Add Series</button>
  </form>

  <script>
    let episodeIndex = 1;

    function addEpisode() {
      const container = document.getElementById('episodes-container');
      const newEpisode = document.createElement('div');
      newEpisode.className = 'episode';
      newEpisode.innerHTML = `
        <button type="button" class="remove-btn" onclick="removeEpisode(this)">X</button>
        <label>Season</label>
        <input type="number" name="episodes[${episodeIndex}][season]" required>

        <label>Episode Number</label>
        <input type="number" name="episodes[${episodeIndex}][episodeNumber]" required>

        <label>Title</label>
        <input type="text" name="episodes[${episodeIndex}][title]" required>

        <label>Duration (minutes)</label>
        <input type="number" name="episodes[${episodeIndex}][duration]" required>

        <label>Air Date</label>
        <input type="date" name="episodes[${episodeIndex}][airDate]">

        <label>Description</label>
        <textarea name="episodes[${episodeIndex}][description]"></textarea>

        <label>Thumbnail</label>
        <input type="url" name="episodes[${episodeIndex}][episode_thumbnail]">

        <label>Episode Source URL</label>
        <input type="url" name="episodes[${episodeIndex}][episode_src]" required>
      `;
      container.appendChild(newEpisode);
      episodeIndex++;
    }

    function removeEpisode(button) {
      const episode = button.closest('.episode');
      episode.remove();
    }
  </script>

</body>
</html>
